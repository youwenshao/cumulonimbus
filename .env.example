# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/cumulonimbus"

# Authentication
NEXTAUTH_SECRET="your-secret-key-here"  # Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"    # Your app URL

# AI/LLM Configuration - Smart Routing System
# Provider options: "auto" (prefers local), "ollama", "openrouter"
LLM_PROVIDER="auto"
LLM_FALLBACK_ENABLED="true"  # Enable automatic fallback between providers

# Ollama Configuration (Local AI - Recommended)
OLLAMA_ENABLED="true"        # Set to "false" to disable local AI
OLLAMA_API_URL="http://localhost:11434"  # Ollama server URL
OLLAMA_MODEL="qwen3-coder:30b"          # Main model for complex code generation
OLLAMA_SMALL_MODEL="qwen3:4b"           # Smaller model for faster, simpler tasks

# OpenRouter Configuration (Cloud AI - Fallback)
OPENROUTER_API_KEY="your-openrouter-api-key-here"  # Get from https://openrouter.ai
OPENROUTER_API_URL="https://openrouter.ai/api/v1"  # OpenRouter API endpoint
OPENROUTER_MODEL="qwen/qwen-2.5-coder-32b-instruct"  # Cloud model

# Legacy Qwen Configuration (for backwards compatibility)
QWEN_API_KEY="your-openrouter-api-key-here"  # Same as OPENROUTER_API_KEY
QWEN_API_URL="https://openrouter.ai/api/v1"  # Same as OPENROUTER_API_URL
QWEN_MODEL="qwen/qwen-2.5-coder-32b-instruct"  # Same as OPENROUTER_MODEL
QWEN_PROVIDER="openrouter"
